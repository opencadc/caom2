<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN" "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app>
    <display-name>torkeep</display-name>

    <servlet>
        <servlet-name>logControl</servlet-name>
        <servlet-class>ca.nrc.cadc.log.LogControlServlet</servlet-class>
        <init-param>
            <param-name>logLevel</param-name>
            <param-value>info</param-value>
        </init-param>
        <init-param>
            <param-name>logLevelPackages</param-name>
            <param-value>
                org.opencadc.torkeep
                ca.nrc.cadc.db.version
                ca.nrc.cadc.rest
                ca.nrc.cadc.caom2
                ca.nrc.cadc.wcs
                ca.nrc.cadc.vosi
            </param-value>
        </init-param>
        <init-param>
            <param-name>logControlProperties</param-name>
            <param-value>cadc-log-control.properties</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>TorkeepInitServlet</servlet-name>
        <servlet-class>ca.nrc.cadc.rest.RestServlet</servlet-class>
        <init-param>
            <param-name>init</param-name>
            <param-value>org.opencadc.torkeep.TorkeepInitAction</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>ObservationsServlet</servlet-name>
        <servlet-class>ca.nrc.cadc.rest.RestServlet</servlet-class>
        <init-param>
            <param-name>get</param-name>
            <param-value>org.opencadc.torkeep.GetAction</param-value>
        </init-param>
        <init-param>
            <param-name>post</param-name>
            <param-value>org.opencadc.torkeep.PostAction</param-value>
        </init-param>
        <init-param>
            <param-name>put</param-name>
            <param-value>org.opencadc.torkeep.PutAction</param-value>
        </init-param>
        <init-param>
            <param-name>delete</param-name>
            <param-value>org.opencadc.torkeep.DeleteAction</param-value>
        </init-param>
        <load-on-startup>3</load-on-startup>
    </servlet>
    
    <servlet>
        <servlet-name>DeletionsServlet</servlet-name>
        <servlet-class>ca.nrc.cadc.rest.RestServlet</servlet-class>
        <init-param>
            <param-name>get</param-name>
            <param-value>org.opencadc.torkeep.GetDeletedAction</param-value>
        </init-param>
        <load-on-startup>3</load-on-startup>
    </servlet>
    
    <servlet>
        <servlet-name>AvailabilityServlet</servlet-name>
        <servlet-class>ca.nrc.cadc.vosi.AvailabilityServlet</servlet-class>
        <init-param>
            <param-name>ca.nrc.cadc.vosi.AvailabilityPlugin</param-name>
            <param-value>org.opencadc.torkeep.ServiceAvailabilityImpl</param-value>
        </init-param>
        <load-on-startup>4</load-on-startup>
    </servlet>

    <servlet>
      <servlet-name>CapabilitiesServlet</servlet-name>
        <servlet-class>ca.nrc.cadc.rest.RestServlet</servlet-class>
        <init-param>
            <param-name>init</param-name>
            <param-value>ca.nrc.cadc.vosi.CapInitAction</param-value>
        </init-param>
        <init-param>
            <param-name>head</param-name>
            <param-value>ca.nrc.cadc.vosi.CapHeadAction</param-value>
        </init-param>
        <init-param>
            <param-name>get</param-name>
            <param-value>ca.nrc.cadc.vosi.CapGetAction</param-value>
        </init-param>
        <init-param>
            <param-name>input</param-name>
            <param-value>/capabilities.xml</param-value>
        </init-param>
        <load-on-startup>4</load-on-startup>
    </servlet>

    <!-- URL-to-servlet mapping -->
    
    <!-- Log control servlet endpoint -->
    <servlet-mapping>
        <servlet-name>logControl</servlet-name>
        <url-pattern>/logControl</url-pattern>
    </servlet-mapping>

    <!-- Availability servlet endpoint -->
    <servlet-mapping>
        <servlet-name>AvailabilityServlet</servlet-name>
        <url-pattern>/availability</url-pattern>
    </servlet-mapping>
    
    <!-- Capability servlet endpoint -->
  <servlet-mapping>
    <servlet-name>CapabilitiesServlet</servlet-name>
    <url-pattern>/capabilities</url-pattern>
  </servlet-mapping>

    <!--  Current caom2 version endpoint (2.4) -->
    <servlet-mapping>
        <servlet-name>ObservationsServlet</servlet-name>
        <url-pattern>/observations/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeletionsServlet</servlet-name>
        <url-pattern>/deletions/*</url-pattern>
    </servlet-mapping>
    
</web-app>
