<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN" "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app>
    <display-name>caom2repo</display-name>
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <load-on-startup>1</load-on-startup>
        <servlet-name>logControl</servlet-name>
        <servlet-class>ca.nrc.cadc.log.LogControlServlet</servlet-class>
        <init-param>
            <param-name>logLevel</param-name>
            <param-value>info</param-value>
        </init-param>
        <init-param>
            <param-name>logLevelPackages</param-name>
            <param-value>
                ca.nrc.cadc.caom2
                ca.nrc.cadc.wcs
                ca.nrc.cadc.auth
                ca.nrc.cadc.gms
            </param-value>
        </init-param>
        <init-param>
            <param-name>logAccessGroup</param-name>
            <param-value>CADC</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>RepoServlet</servlet-name>
        <servlet-class>ca.nrc.cadc.caom2.repo.RepoServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>

    <servlet>
        <load-on-startup>3</load-on-startup>
        <servlet-name>AvailabilityServlet</servlet-name>
        <servlet-class>ca.nrc.cadc.vosi.AvailabilityServlet</servlet-class>
        <init-param>
            <description>
            </description>
            <param-name>ca.nrc.cadc.vosi.WebService</param-name>
            <param-value>ca.nrc.cadc.caom2.repo.CaomRepoWebService</param-value>
        </init-param>
    </servlet>

    <!-- URL-to-servlet mapping -->
    
    
    <servlet-mapping>
        <servlet-name>logControl</servlet-name>
        <url-pattern>/logControl</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>logControl</servlet-name>
        <url-pattern>/auth-logControl</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AvailabilityServlet</servlet-name>
        <url-pattern>/availability</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>RepoServlet</servlet-name>
        <url-pattern>/pub/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RepoServlet</servlet-name>
        <url-pattern>/auth/*</url-pattern>
    </servlet-mapping>

    <!-- security constraints -->
    
    <security-role>
        <description>Public security role</description>
        <role-name>public</role-name>
    </security-role>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>auth</web-resource-name>
            <description/>
            <url-pattern>/auth/*</url-pattern>
            <url-pattern>/auth-logControl/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
            <http-method>HEAD</http-method>
            <http-method>PUT</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>TRACE</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description>force authentication for all requests</description>
            <role-name>public</role-name>
        </auth-constraint>
    </security-constraint>
    
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>Canadian Astronomy Data Centre</realm-name>
    </login-config>
    
</web-app>
